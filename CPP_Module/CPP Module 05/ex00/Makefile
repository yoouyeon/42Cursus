NAME	=	ex00
CXX	=	c++
SRCS	=	main.cpp Bureaucrat.cpp
OBJS	=	$(SRCS:.cpp=.o)
CXXFLAGS	=	-Wall -Wextra -Werror -std=c++98

# ======= Rules =======

all	:	$(NAME)

$(NAME)	: $(OBJS)
	$(CXX) $(CXXFLAGS) -o $@ $(OBJS)
	@printf "ðŸ¤© $(BGREEN)$(NAME) was created.$(RESET)\n"


%.o	:	%.cpp
	@$(CXX) $(CXXFLAGS) -c $< -o $@

clean	:
	@rm -rf $(OBJS)
	@printf "ðŸ—‘ $(NAME)'s object files were removed.\n"

fclean	:	clean
	@rm -rf $(NAME)
	@printf "ðŸ—‘ $(NAME) was removed.\n"

re	:	
	@make fclean
	@make all

debug	:
	@printf "ðŸ”¨ $(BCYAN)It's Debug Time ðŸŽ¶ $(RESET)\n"
	@make DEBUG=1 re

leaks	:
	@printf "ðŸ™ $(BPURPLE)Let's Check Leaks ðŸŽ¶ $(RESET)\n"
	@make LEAKS=1 re

.PHONY : all clean fclean re leaks debug

# ======= Color =======

BGREEN	=	\033[1;32m
BCYAN	=	\033[1;96m
BPURPLE	=	\033[1;35m
RESET	=	\033[0m